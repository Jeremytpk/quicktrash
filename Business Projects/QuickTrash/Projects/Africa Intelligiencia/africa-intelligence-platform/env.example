# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/africa_intelligence

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,yourdomain.com

# AI/ML Configuration
AI_MODEL_PATH=./models
HUGGINGFACE_CACHE_DIR=./hf_cache
HUGGINGFACE_TOKEN=your_huggingface_token_here

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# S3 Storage
S3_BUCKET_NAME=africa-intelligence-storage
S3_REGION=us-east-1

# Social Media API Keys
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@africaintelligence.com

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
SPLUNK_HOST=your_splunk_host
SPLUNK_TOKEN=your_splunk_token

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Content Generation Settings
MAX_ARTICLES_PER_BATCH=10
DEFAULT_SUMMARY_LENGTH=150
DEFAULT_VIDEO_DURATION=45
DEFAULT_BLOG_LENGTH=600

# Scraping Configuration
DEFAULT_SCRAPING_DELAY=1.0
MAX_ARTICLES_PER_SOURCE=20
SCRAPING_USER_AGENT=Africa Intelligence Platform Bot/1.0

# Domain Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000/api/v1
