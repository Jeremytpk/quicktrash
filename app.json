{
  "expo": {
    "name": "QuickTrash",
    "slug": "quicktrash",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/qt_logo_vide.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "quicktrash",
    "splash": {
      "image": "./assets/logo/qt_logo_vide.png",
      "resizeMode": "contain",
      "backgroundColor": "#34A853"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.quicktrash.app",
      "googleServicesFile": "./GoogleService-Info.plist",
      "config": {
        "googleMapsApiKey": "AIzaSyBZ1Dsh7_p2AlwvakoKXPUAKwI3QtjulSg"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "QuickTrash needs location access to find nearby pickup services and provide accurate pickup locations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "QuickTrash needs location access to track contractors and provide real-time pickup updates.",
        "NSCameraUsageDescription": "QuickTrash needs camera access to take photos of trash items and verify pickups.",
        "NSPhotoLibraryUsageDescription": "QuickTrash needs photo library access to upload images of trash items.",
        "NSMicrophoneUsageDescription": "QuickTrash may need microphone access for voice messages in the chat feature."
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.quicktrash.app",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/qt_logo_vide.png",
        "backgroundColor": "#34A853"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyBZ1Dsh7_p2AlwvakoKXPUAKwI3QtjulSg"
        }
      }
    },
    "web": {
      "favicon": "./assets/logo/qt_logo_vide.png"
    },
    "plugins": [
      "expo-location",
      "expo-image-picker",
      ["@react-native-firebase/app", {
        "android": {
          "googleServicesFile": "./google-services.json"
        }
      }],
      "@react-native-firebase/crashlytics",
      "expo-notifications",
      "expo-asset",
      "expo-maps",
      "expo-font",
      ["@stripe/stripe-react-native", {
        "merchantIdentifier": "merchant.com.quicktrash.app",
        "enableGooglePay": true
      }]
    ],
    "extra": {
      "eas": {
        "projectId": "41d00a6b-1a36-48f9-a462-69f6bed08b86"
      }
    },
    "owner": "jeremytpk",
    "updates": {
      "url": "https://u.expo.dev/41d00a6b-1a36-48f9-a462-69f6bed08b86",
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": "1.0.0"
  }
}
